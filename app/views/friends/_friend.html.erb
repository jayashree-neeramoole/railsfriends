<div id="<%= dom_id friend %>" style="background-color:grey; padding:40px;" class="flex">
  <h1>
    <%= friend.first_name %>
    <%= friend.last_name %>
  </h1>

  
  <p>
    <%= friend.email %> | <%= friend.phone %> | <%= friend.twitter %>
  </p>
<div class="d-flex justify-content-evenly">
    <%= link_to "Edit", edit_friend_path(@friend),class:"btn btn-secondary" %>
    <%= button_to "Delete", @friend, method: :delete,class:"btn btn-danger" %>
     <%= link_to "Back", friends_path,class:"btn btn-dark" %>
</div>
</div>
